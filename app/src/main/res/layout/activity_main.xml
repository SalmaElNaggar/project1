<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#e3b347">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/download"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#365b5e"
        android:text="X Private School"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#365b5e"
        android:text="*For different educational levels: KG, Primary, Preparatory and Secondary Level.\n\n*Address: ******\n\n*Contact info:\n-Tel: **********\n-Mob: ***********\n-Email: x_school@yahoo.com"
        android:textSize="27sp"
        android:layout_below="@+id/text1"
        android:textStyle="bold"
        android:layout_margin="20dp"/>


</RelativeLayout>